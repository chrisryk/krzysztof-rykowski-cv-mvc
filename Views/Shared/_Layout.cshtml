<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - Krzysztof Rykowski</title>
	<link rel="preconnect" href="https://fonts.googleapis.com">
	<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
	<link href="https://fonts.googleapis.com/css2?family=Raleway:ital,wght@0,100;0,300;0,500;1,100;1,300;1,500&display=swap" rel="stylesheet">
	@*<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">*@
	<link rel="stylesheet" href="~/CV_MVC.styles.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
	<header id="header">
		<div>
			<h1 class="title"><span>K</span>rzysztof <span>R</span>ykowski</h1>
			<img src="~/images/kr.png" alt="photo of k. r.">
		</div>
	</header>
	<nav>
		<ul>
			<li><a asp-controller="Home" asp-action="Index">Summary</a></li>
			<li><a asp-controller="Home" asp-action="Contacts">Contacts</a></li>
			<li><a asp-controller="Home" asp-action="Skills">Skills</a></li>
			<li><a asp-controller="Home" asp-action="Education">Education</a></li>
			<li><a asp-controller="Home" asp-action="Experience">Work experience</a></li>
			<li><a asp-controller="Home" asp-action="Languages">Languages</a></li>
			<li><a asp-controller="Home" asp-action="Hobby">Hobby</a></li>
		</ul>
	</nav>

	<main>
		@RenderBody()
		<div class="arrow">
			<a href="#header"><img src="~/images/arrow.png" alt="top arrow"></a>
		</div>
	</main>

	<footer>
		<h3>Krzysztof Rykowski @($"{DateTimeOffset.UtcNow.Date.Day}.{DateTimeOffset.UtcNow.Date.Month}.{DateTimeOffset.UtcNow.Date.Year}")</h3>
	</footer>
	@*<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>*@
	<script src="~/js/site.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
